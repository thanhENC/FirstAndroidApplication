<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#009688"
    tools:context=".MainActivity">

    <!--START top region-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="*"
        android:background="#005E55">
        <!--START column base-->
        <TableRow>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content">
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content">
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content">
            </LinearLayout>
        </TableRow>
        <!--END column base-->
        <TableRow
            android:layout_marginVertical="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_span="2"
                android:text="Chọn dịch vụ"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
            <Button
                android:id="@+id/btnExit"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                android:text="THOÁT"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>
    <!--END top region-->

    <!--START middle region-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="*" >
        <!--START row 1-->
        <TableRow
            android:layout_marginVertical="20dp">
            <!--START item 1-->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:src="@drawable/washing_machine" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Giặt ủi"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--END item 1-->
            <!--START item 2-->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hotel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Khách sạn"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--END item 2-->
        </TableRow>
        <!--END row 1-->

        <!--START row 2-->
        <TableRow
            android:layout_marginVertical="20dp">
            <!--START item 3-->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:src="@drawable/taxi" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Taxi"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--END item 3-->
            <!--START item 4-->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fastfood" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Thức ăn nhanh"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--END item 4-->
        </TableRow>
        <!--END row 2-->

        <!--START row 3-->
        <TableRow
            android:layout_marginVertical="20dp">
            <!--START item 5-->
            <LinearLayout
                android:layout_column="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:src="@drawable/truck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Vận chuyển"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--END item 5-->
        </TableRow>
        <!--END row 3-->
    </TableLayout>
    <!--END middle region-->
</TableLayout>